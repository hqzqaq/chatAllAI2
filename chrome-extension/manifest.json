{
  "manifest_version": 3,
  "name": "d3k Browser Monitor",
  "version": "1.0.0",
  "description": "Unified development logs & events - browser monitoring via Chrome DevTools Protocol integrated with MCP server",
  "permissions": ["debugger", "activeTab", "storage", "tabs"],
  "host_permissions": ["http://localhost:3684/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "d3k Monitor",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*", "https://localhost:*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
